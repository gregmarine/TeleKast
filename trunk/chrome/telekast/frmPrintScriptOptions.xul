<!DOCTYPE dialog SYSTEM "chrome://telekast/locale/frmPrintScriptOptions.dtd">

<dialog
  id="frmPrintOptions"
  title="&frmPrintOptions;"
  width="200"
  height="225"
  orient="vertical"
  buttons="accept,cancel"
  onload="OnLoad();"
  ondialogaccept="OnDialogAccept();"
  xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

    <script type="application/x-javascript" src="chrome://jslib/content/jslib.js" />
    <script type="application/x-javascript" src="TeleKast.js"/>
    <script type="application/x-javascript" src="frmPrintScriptOptions.js"/>
    
    <stringbundleset>
        <stringbundle id="frmPrintScriptOptionsProperties" src="chrome://telekast/locale/frmPrintOptions.properties"/>
    </stringbundleset>
    
    <groupbox>
    
        <caption label="&cuesToInclude;" image="images/print.png" />
        
        <hbox flex="1">
            <checkbox id="chkCameraCue" label="&chkCameraCue;" />
            <spacer flex="1" />
            <image src="images/camera_cue.png" />
        </hbox>
        
        <hbox flex="1">
            <checkbox id="chkAudioCue" label="&chkAudioCue;" />
            <spacer flex="1" />
            <image src="images/audio_cue.png" />
        </hbox>
        
        <hbox flex="1">
            <checkbox id="chkVideoCue" label="&chkVideoCue;" />
            <spacer flex="1" />
            <image src="images/video_cue.png" />
        </hbox>
        
        <hbox flex="1">
            <checkbox id="chkTalentCue" label="&chkTalentCue;" />
            <spacer flex="1" />
            <image src="images/talent_cue.png" />
        </hbox>
        
        <hbox flex="1">
            <checkbox id="chkOtherCue" label="&chkOtherCue;" />
            <spacer flex="1" />
            <image src="images/other_cue.png" />
        </hbox>
    
    </groupbox>
    
</dialog>
